{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["../packages/api/*"],
      "@ui/*":  ["../packages/ui/*"],
      "@utils/*": ["../packages/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

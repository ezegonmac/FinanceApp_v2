{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2023",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["../packages/api/*"],
      "@ui/*":  ["../packages/ui/*"],
      "@utils/*": ["./utils/*"],
      "@schemas/*": ["./schemas/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
